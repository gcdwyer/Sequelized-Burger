<!-- ====================== insert into handlebars body ======================-->
<div class="row restaurant-row text-center">

	<!-- ====================== Available Burgers ============================= -->
	<div class="col-md-6 text-center">
		<h2 class="topBar">Eat Me!</h2>
		{{#each burgers}}
			{{#unless devoured}}
				<div class="row burger-item">
					<div class="text-center"><button data-id="{{id}}" class="btn btn-primary eatBurger text-center">#{{id}} {{burger_name}}</button></div>
				</div>
			{{/unless}}
		{{/each}}	
	</div>

	<!-- ====================== Eaten Burgers ====================== -->
	<div class="col-md-6">
		<h2 class="topBar">I'm Full!</h2>
		{{#each burgers}}
			{{#if devoured}}
				<div class="row burger-item">
					<div class="btn btn-danger ateBurger"><p>#{{id}} {{burger_name}}</p></div> 
				</div>
			{{/if}}
		{{/each}}	
	</div>
</div>

<!-- ====================== Create Burgers ====================== -->
<div class="row">
	<div class="col-md-4 col-md-offset-4 createBurger">
		<p class="topBar">Create a Burger</p>
		<form action="/" method="POST">
			<textarea class="form-control align-center" type="text" name="burger"></textarea>
			<button class="btn btn-default" type="submit">Order</button>
		</form>
	</div>
</div>
